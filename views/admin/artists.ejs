<%- include('../partials/header') %>
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="fas fa-users-cog"></i>Artist Management</h2>
            <span class="badge bg-info">Total Artists: <%= artists.length %></span>
        </div>

        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Artist Name</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% artists.forEach(artist=> { %>
                            <tr>
                                <td><strong>
                                        <%= artist.username %>
                                    </strong></td>
                                <td>
                                    <%= artist.email %>
                                </td>
                                <td>
                                    <% if(artist.isActive) { %>
                                        <span class="badge rounded-pill bg-success">Active</span>
                                        <% } else { %>
                                            <span class="badge rounded-pill bg-danger">Suspended</span>
                                            <% } %>
                                </td>
                                <td>
                                    <form action="/admin/toggle-artist" method="POST">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <input type="hidden" name="artistId" value="<%= artist._id %>">
                                        <button type="submit"
                                            class="btn btn-sm <%= artist.isActive ? 'btn-outline-danger' : 'btn-outline-success' %>">
                                            <%= artist.isActive ? 'Suspend Account' : 'Activate Account' %>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <%- include('../partials/footer') %>