<%- include('../partials/header') %>

    <div class="container-fluid">
        <div class="row">
            <%- include('../partials/artist-sidebar') %>

                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4 bg-light">

                    <div
                        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom">
                        <h1 class="h2 fw-bold">Upload New Masterpiece</h1>
                    </div>

                    <% if (error_msg && error_msg.length> 0) { %>
                        <div class="alert alert-danger">
                            <%= error_msg %>
                        </div>
                        <% } %>

                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="card shadow-sm border-0">
                                        <div class="card-body p-4">
                                            <form action="/artist/add-artwork" method="POST"
                                                enctype="multipart/form-data">
                                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                                                <h5 class="mb-4 text-muted border-bottom pb-2">Basic Information</h5>

                                                <div class="mb-3">
                                                    <label class="form-label fw-bold">Artwork Title</label>
                                                    <input type="text" name="title" class="form-control"
                                                        placeholder="e.g. Sunset over Venice" required>
                                                </div>

                                                <div class="row">
                                                    <div class="col-md-6 mb-3">
                                                        <label class="form-label fw-bold">Price ($)</label>
                                                        <div class="input-group">
                                                            <span class="input-group-text">$</span>
                                                            <input type="number" name="price" class="form-control"
                                                                step="0.01" required>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 mb-3">
                                                        <label class="form-label fw-bold">Category</label>
                                                        <select name="category" class="form-select">
                                                            <option value="Painting">Painting</option>
                                                            <option value="Sculpture">Sculpture</option>
                                                            <option value="Digital">Digital Art</option>
                                                            <option value="Photography">Photography</option>
                                                        </select>
                                                    </div>
                                                </div>

                                                <h5 class="mb-4 mt-3 text-muted border-bottom pb-2">Details & Media</h5>

                                                <div class="row">
                                                    <div class="col-md-6 mb-3">
                                                        <label class="form-label fw-bold">Dimensions</label>
                                                        <input type="text" name="dimensions" class="form-control"
                                                            placeholder="e.g. 24x36 inches">
                                                    </div>
                                                    <div class="col-md-6 mb-3">
                                                        <label class="form-label fw-bold">Medium</label>
                                                        <input type="text" name="medium" class="form-control"
                                                            placeholder="e.g. Oil on Canvas">
                                                    </div>
                                                </div>

                                                <div class="mb-3">
                                                    <label class="form-label fw-bold">Upload High-Res Image</label>
                                                    <input type="file" name="image" class="form-control"
                                                        accept="image/*" required>
                                                    <div class="form-text">Supported formats: JPG, PNG, WEBP. Max size:
                                                        5MB.</div>
                                                </div>

                                                <div class="mb-4">
                                                    <label class="form-label fw-bold">Description</label>
                                                    <textarea name="description" class="form-control" rows="5"
                                                        placeholder="Tell the story behind this artwork..."
                                                        required></textarea>
                                                </div>

                                                <div class="d-flex justify-content-end">
                                                    <a href="/artist/dashboard"
                                                        class="btn btn-outline-secondary me-2">Cancel</a>
                                                    <button type="submit" class="btn btn-primary px-4">
                                                        <i class="fas fa-cloud-upload-alt me-2"></i> Submit for Approval
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-4 mt-4 mt-lg-0">
                                    <div class="card bg-white border-0 shadow-sm p-3">
                                        <h6 class="fw-bold"><i
                                                class="fas fa-info-circle text-primary me-2"></i>Submission Guidelines
                                        </h6>
                                        <ul class="small text-muted ps-3 mt-2">
                                            <li class="mb-2">Ensure lighting is natural when photographing your work.
                                            </li>
                                            <li class="mb-2">Accurate dimensions help customers visualize the piece.
                                            </li>
                                            <li class="mb-2">Your artwork will be reviewed by an Admin before going
                                                live.</li>
                                            <li><strong>Platform Fee:</strong> 20% is deducted upon sale.</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                </main>
        </div>
    </div>

    <%- include('../partials/footer') %>