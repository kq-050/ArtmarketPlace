<%- include('../partials/header') %>

<div class="container-fluid">
    <div class="row">
        <%- include('../partials/artist-sidebar') %>

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4 bg-light">
            
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom">
                <h1 class="h2 fw-bold text-dark">Artist Studio</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <a href="/artist/add-artwork" class="btn btn-primary shadow-sm">
                        <i class="fas fa-cloud-upload-alt me-2"></i> Upload Artwork
                    </a>
                </div>
            </div>

            <% if (success_msg && success_msg.length > 0) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= success_msg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>

            <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm bg-white">
                        <div class="card-body d-flex align-items-center">
                            <div class="bg-light p-3 rounded-circle me-3 text-primary">
                                <i class="fas fa-wallet fa-2x"></i>
                            </div>
                            <div>
                                <h6 class="card-subtitle text-muted text-uppercase small">Total Earnings (80%)</h6>
                                <h2 class="card-title fw-bold mb-0 text-dark">$<%= totalRevenue %></h2>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm bg-white">
                        <div class="card-body d-flex align-items-center">
                            <div class="bg-light p-3 rounded-circle me-3 text-success">
                                <i class="fas fa-shopping-bag fa-2x"></i>
                            </div>
                            <div>
                                <h6 class="card-subtitle text-muted text-uppercase small">Items Sold</h6>
                                <h2 class="card-title fw-bold mb-0 text-dark"><%= totalSoldItems %></h2>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm bg-white">
                        <div class="card-body d-flex align-items-center">
                            <div class="bg-light p-3 rounded-circle me-3 text-info">
                                <i class="fas fa-images fa-2x"></i>
                            </div>
                            <div>
                                <h6 class="card-subtitle text-muted text-uppercase small">Portfolio Size</h6>
                                <h2 class="card-title fw-bold mb-0 text-dark"><%= artworks.length %></h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3 border-0">
                    <h5 class="mb-0 fw-bold">Your Portfolio</h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-muted small text-uppercase">
                            <tr>
                                <th scope="col" class="ps-4">Artwork</th>
                                <th scope="col">Category</th>
                                <th scope="col">Price</th>
                                <th scope="col">Status</th>
                                <th scope="col">Date Uploaded</th>
                            </tr>
                        </thead>
                        <tbody class="border-top-0">
                            <% if (artworks.length > 0) { %>
                                <% artworks.forEach(art => { %>
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="ratio ratio-1x1 me-3 rounded overflow-hidden" style="width: 50px;">
                                                <img src="<%= art.imagePath %>" alt="<%= art.title %>" class="img-fluid" style="object-fit: cover;">
                                            </div>
                                            <div>
                                                <span class="d-block fw-bold text-dark"><%= art.title %></span>
                                            </div>
                                        </div>
                                    </td>
                                    <td><span class="badge bg-light text-dark border"><%= art.category %></span></td>
                                    <td class="fw-bold">$<%= art.price %></td>
                                    <td>
                                        <% if(art.status === 'Approved') { %>
                                            <span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill">Live</span>
                                        <% } else if(art.status === 'Pending') { %>
                                            <span class="badge bg-warning bg-opacity-10 text-warning px-3 py-2 rounded-pill">Under Review</span>
                                        <% } else if(art.status === 'Sold') { %>
                                            <span class="badge bg-danger bg-opacity-10 text-danger px-3 py-2 rounded-pill">Sold Out</span>
                                        <% } %>
                                    </td>
                                    <td class="text-muted small">
                                        <%= art.createdAt ? art.createdAt.toDateString() : 'Date Unknown' %>
                                    </td>
                                </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5" class="text-center py-5 text-muted">
                                        You haven't uploaded any artwork yet.
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>
</div>

<%- include('../partials/footer') %>