<%- include('../partials/header') %>

    <div class="hero-section">
        <div class="container">
            <h1 class="display-3 fw-bold mb-3">Curated Art for Unique Spaces</h1>
            <p class="lead mb-4">Discover original paintings, sculptures, and digital works from artists worldwide.</p>
            <a href="#gallery" class="btn btn-light btn-lg px-5">Explore Collection</a>
        </div>
    </div>
    <div class="container mb-4">
        <form action="/" method="GET" class="row g-3 align-items-center bg-light p-3 rounded shadow-sm">
            <div class="col-md-3">
                <select name="category" class="form-select">
                    <option value="All">All Categories</option>
                    <option value="Painting" <%=selectedCategory==='Painting' ?'selected':'' %>>Painting</option>
                    <option value="Sculpture" <%=selectedCategory==='Sculpture' ?'selected':'' %>>Sculpture</option>
                    <option value="Digital" <%=selectedCategory==='Digital' ?'selected':'' %>>Digital</option>
                    <option value="Photography" <%=selectedCategory==='Photography' ?'selected':'' %>>Photography
                    </option>
                </select>
            </div>
            <div class="col-md-2">
                <select name="sort" class="form-select">
                    <option value="latest" <%=currentSort==='latest' ?'selected':'' %>>Latest Arrivals</option>
                    <option value="price_asc" <%=currentSort==='price_asc' ?'selected':'' %>>Price: Low to High</option>
                    <option value="price_desc" <%=currentSort==='price_desc' ?'selected':'' %>>Price: High to Low
                    </option>
                </select>
            </div>
            <div class="col-md-3">
                <input type="text" name="search" class="form-control" placeholder="Search keyword..."
                    value="<%= searchQuery %>">
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Filter</button>
            </div>
        </form>
    </div>

    <div class="container" id="gallery">
        <div class="row mb-4">
            <div class="col-12 text-center">
                <h2 class="section-title">Latest Arrivals</h2>
                <p class="text-muted">
                    <%= totalArtworks %> artworks found
                </p>
                <hr class="w-25 mx-auto text-muted">
            </div>
        </div>

        <div class="row">
            <% if(artworks.length> 0) { %>
                <% artworks.forEach(art=> { %>
                    <div class="col-md-4 mb-5">
                        <div class="card h-100 artwork-card">
                            <a href="/artwork/<%= art._id %>">
                                <img src="<%= art.imagePath %>" class="card-img-top" alt="<%= art.title %>">
                            </a>

                            <div class="card-body text-center">
                                <h5 class="card-title">
                                    <%= art.title %>
                                </h5>
                                <p class="text-muted small">by <%= art.artist.username %>
                                </p>
                                <div class="price-tag mb-3">$<%= art.price %>
                                </div>

                                <% if(isAuthenticated) { %>
                                    <form action="/wishlist" method="POST" class="position-absolute top-0 end-0 p-3">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <input type="hidden" name="artworkId" value="<%= art._id %>">
                                        <button type="submit" class="btn btn-light btn-sm rounded-circle shadow-sm">
                                            <% if(currentUser.wishlist && currentUser.wishlist.some(id=> id.toString()
                                                === art._id.toString())) { %>
                                                <i class="fas fa-heart text-danger"></i>
                                                <% } else { %>
                                                    <i class="far fa-heart text-danger"></i>
                                                    <% } %>
                                        </button>
                                    </form>
                                    <% } %>

                                        <a href="/artwork/<%= art._id %>"
                                            class="btn btn-outline-primary btn-sm stretched-link">View Details</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>

                        <!-- Pagination Controls -->
                        <div class="col-12 mt-4 d-flex justify-content-center">
                            <nav aria-label="Page navigation">
                                <ul class="pagination pagination-lg">
                                    <% if(hasPrevPage) { %>
                                        <li class="page-item">
                                            <a class="page-link"
                                                href="/?page=<%= currentPage - 1 %>&category=<%= selectedCategory %>&search=<%= searchQuery %>&sort=<%= currentSort %>">&laquo;
                                                Previous</a>
                                        </li>
                                        <% } %>

                                            <% for(let i=1; i <=totalPages; i++) { %>
                                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                                    <a class="page-link"
                                                        href="/?page=<%= i %>&category=<%= selectedCategory %>&search=<%= searchQuery %>&sort=<%= currentSort %>">
                                                        <%= i %>
                                                    </a>
                                                </li>
                                                <% } %>

                                                    <% if(hasNextPage) { %>
                                                        <li class="page-item">
                                                            <a class="page-link"
                                                                href="/?page=<%= currentPage + 1 %>&category=<%= selectedCategory %>&search=<%= searchQuery %>&sort=<%= currentSort %>">Next
                                                                &raquo;</a>
                                                        </li>
                                                        <% } %>
                                </ul>
                            </nav>
                        </div>

                        <% } else { %>
                            <div class="col-12 text-center py-5">
                                <h3 class="text-muted">No masterpieces available right now.</h3>
                            </div>
                            <% } %>
        </div>
    </div>

    <%- include('../partials/footer') %>